<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="20dp">
    <ImageView
        android:id="@+id/img1"
        android:background="@drawable/sicat"
        android:layout_width="196dp"
        android:layout_height="196dp"
        android:layout_below="@id/grid_layout"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/sicat_image"
        />
    <Button
        android:id="@+id/btn1"
        android:text="@string/lov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img1"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:id="@+id/img2"
        android:background="@drawable/sicat"
        android:layout_width="196dp"
        android:layout_height="196dp"
        android:layout_below="@id/btn1"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/sicat_image"
        />
    <Button
        android:id="@+id/btn2"
        android:text="@string/lov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img2"
        android:layout_centerHorizontal="true"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ConstraintLayout"
        >
        <Button
            android:id="@+id/btn3_1"
            android:text="@string/last"
            android:layout_height="wrap_content"
            android:layout_width="90dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_refresh"
            />

        <Button
            android:id="@+id/btn3_2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/btn_refresh"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            />

        <Button
            android:id="@+id/btn_refresh"
            android:text="@string/refresh"
            android:layout_height="wrap_content"
            android:layout_width="180dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>